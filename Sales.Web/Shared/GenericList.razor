@typeparam Titem

@if (MyList is null)
{
    @if (Loadig is null)
    {
        <div class="align-items-center">
            <img src="https://i.pinimg.com/originals/90/ad/7c/90ad7c4dac1bceb3359b732146062441.gif" />
        </div>
        <p>Cargando...</p>
    }
    else
    {
        @Loadig
    }
}else if(MyList.Count == 0)
{
    @if (NoRecords is null)
    {
        <div class="align-items-center">
            <p>No hay registros para mostrar</p>
        </div>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body   
}

@code {
    [Parameter]
    public RenderFragment? Loadig { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    [Parameter]
    [EditorRequired]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> MyList { get; set; } = null!;

}
